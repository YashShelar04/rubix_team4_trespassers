{
    "manifest_version": 3,
    "name": "Task Progress Tracker",
    "version": "1.0",
    "description": "Tracks and reminds team members about pending tasks.",
    "permissions": ["storage", "alarms", "notifications","background"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_popup": "popup.html",
      "default_title": "Open Task Tracker"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
  
  